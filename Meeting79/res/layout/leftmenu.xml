<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBg"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="60dp"
        android:paddingRight="35dp"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:text="Menu"
            android:textColor="#99ffff"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/menuFind"
            android:clickable="true"            
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#33666666"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/menuText"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="친구찾기"
                android:textColor="@color/menuText"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuHeart"
            android:clickable="true" 
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#33999999"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/menuText"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="내가 받은 하트"
                android:textColor="@color/menuText"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuChat"
            android:clickable="true" 
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#33666666"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/menuText"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="채팅"
                android:textColor="@color/menuText"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="right"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/menuProfile"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp" 
                android:background="@drawable/p3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="프로필"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuContact"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33999999"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="몰래 고백하기"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuSetting"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33666666"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="설정"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/menuStore"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#11999999"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="스토어"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuNotice"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#33999999"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="공지"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/menuEvent"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33666666"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="이벤트"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuQna"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33999999"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="문의하기"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuHelp"
                android:clickable="true" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33666666"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/menuText"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="도움말"
                    android:textColor="@color/menuText"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>